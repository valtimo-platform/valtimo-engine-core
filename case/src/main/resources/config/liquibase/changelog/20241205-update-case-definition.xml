<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="1" author="Ritense">
        <dropForeignKeyConstraint baseTableName="task_list_column"
                                    constraintName="fk_task_list_column_case_definition"/>
        <!--TODO: add this back based on the new information-->
    </changeSet>

    <changeSet id="2" author="Ritense">
        <dropPrimaryKey tableName="case_definition"/>
    </changeSet>

    <changeSet id="3" author="Ritense">
        <renameColumn tableName="case_definition" oldColumnName="case_definition_name" newColumnName="case_definition_key"/>
        <addColumn tableName="case_definition">
            <column name="case_definition_version_tag" type="VARCHAR(256)" defaultValue="1.0.0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="case_definition">
            <column name="case_definition_name" type="VARCHAR(256)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="Ritense">
        <addPrimaryKey tableName="case_definition" columnNames="case_definition_key, case_definition_version_tag"/>
    </changeSet>

    <changeSet id="5" author="Ritense">
        <preConditions onFail="MARK_RAN">
            <dbms type="mysql"/>
        </preConditions>
        <sql>
            UPDATE case_definition cd
            SET case_definition_name = (
                SELECT JSON_EXTRACT(jsd.json_schema, '$.title')
                FROM json_schema_document_definition jsd
                WHERE jsd.document_definition_name = cd.case_definition_key
            );
        </sql>
    </changeSet>

    <changeSet id="6" author="Ritense">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>
        <sql>
            UPDATE case_definition cd
            SET case_definition_name = (
                SELECT jsd.json_schema->>'title'
                FROM json_schema_document_definition jsd
                WHERE jsd.document_definition_name = cd.case_definition_key
            );
        </sql>
    </changeSet>

    <changeSet id="7" author="Ritense">
        <addColumn tableName="task_list_column">
            <column name="case_definition_version_tag" type="VARCHAR(256)" defaultValue="1.0.0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="8" author="Ritense">
        <addForeignKeyConstraint
            baseTableName="task_list_column"
            baseColumnNames="case_definition_key, case_definition_version_tag"
            constraintName="fk_task_list_column_case_definition"
            referencedTableName="case_definition"
            referencedColumnNames="case_definition_key, case_definition_version_tag" />
    </changeSet>

</databaseChangeLog>